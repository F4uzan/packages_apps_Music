<resources>

    <style name="AppTheme.Main" parent="MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
    </style>

    <style name="AppTheme.Search" parent="AppTheme.Main">
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/primary_text_dark</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme.Main">
        <item name="android:windowBackground">@drawable/branded_logo</item>
    </style>


</resources>
